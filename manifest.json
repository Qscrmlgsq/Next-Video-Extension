{
    "manifest_version": 2,

    "name": "Load Next Video",
    "version": "1.0",

    "description": "Reloads the current page as the page with the next episode of the current show being watched.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" 
    },


    "browser_action": {
        "default_icon": "iconoriginal.png"
    },

    "background":{
        "scripts": ["next_vid.js"]
    },

    "permissions": ["activeTab"]
}